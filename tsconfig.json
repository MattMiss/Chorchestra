{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "paths": {
      "@/*": [
        "./*"
      ]
    },
    "jsx": "react-native",
    "types": [
      "nativewind/types"
    ]
  },
  "include": [
    "app/**/*",
    "components/**/*",
    "screens/**/*",
    "context/**/*",
    "**/*.ts",
    "**/*.tsx",
    "./nativewind.d.ts",
    "nativewind-env.d.ts"
  ],
  "exclude": [
    "node_modules",
    "babel.config.js",
    "metro.config.js"
  ]
}